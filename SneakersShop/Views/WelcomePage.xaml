<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SneakersShop.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{AppThemeBinding Light=White,
                                      Dark={StaticResource OffBlack}}"
    NavigationPage.HasNavigationBar="False"
    Shell.NavBarIsVisible="False"
    Shell.TabBarIsVisible="False">
    <Grid>
        <Image Aspect="AspectFill" Source="welcome_page.png" />
        <VerticalStackLayout TranslationX="50" TranslationY="160">
            <VerticalStackLayout>
                <Label
                    FontAttributes="Bold"
                    FontSize="44"
                    Text="Sneakers"
                    TextColor="Goldenrod" />
                <Label
                    FontAttributes="Bold"
                    FontSize="44"
                    Text="Shop"
                    TextColor="Goldenrod" />
            </VerticalStackLayout>
            <VerticalStackLayout>
                <HorizontalStackLayout>
                    <Label
                        FontSize="20"
                        Text="do"
                        TextColor="White"
                        TranslationY="-5"
                        VerticalOptions="End" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="36"
                        Text=" 40%"
                        TextColor="White" />
                    <Label
                        FontSize="16"
                        Text=" Popusta"
                        TextColor="White"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
                <Label
                    FontSize="16"
                    Text="na odabrane kolekcije"
                    TextColor="White" />
                <Border
                    BackgroundColor="#f02a4c"
                    HorizontalOptions="Start"
                    StrokeShape="RoundRectangle 10"
                    StrokeThickness="0"
                    TranslationX="-10"
                    WidthRequest="180">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalTextAlignment="Center"
                        Text="Besplatna dostava"
                        TextColor="White"
                        TextTransform="Uppercase" />
                </Border>
            </VerticalStackLayout>
        </VerticalStackLayout>
        <VerticalStackLayout
            Margin="0,30"
            HorizontalOptions="Center"
            Spacing="5"
            VerticalOptions="End">
            <Button
                BackgroundColor="White"
                Clicked="Login_Button_Clicked"
                Style="{DynamicResource WhiteButton}"
                Text="Prijavi se" />
            <Button
                Clicked="Skip_Login_Button_Clicked"
                Style="{DynamicResource TextButton}"
                Text="PreskoÄi"
                TextColor="White" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>