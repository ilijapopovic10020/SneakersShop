<?xml version="1.0" encoding="utf-8" ?>
<popups:Popup
    x:Class="SneakersShop.Components.Popups.CategoryPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:SneakersShop.Models"
    xmlns:popups="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="True"
    Color="Transparent">
    <Border
        Padding="20"
        BackgroundColor="White"
        StrokeShape="RoundRectangle 30"
        WidthRequest="350">
        <VerticalStackLayout Spacing="20">
            <CollectionView
                HorizontalOptions="Center"
                ItemsSource="{Binding Categories}"
                SelectionChanged="CollectionView_SelectionChanged"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="model:CategoriesModel">
                        <Border
                            Margin="30,10"
                            Padding="0,10"
                            BackgroundColor="{Binding BackgroundColor}"
                            StrokeShape="RoundRectangle 20"
                            StrokeThickness="0"
                            WidthRequest="300">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                HorizontalTextAlignment="Center"
                                Text="{Binding Name}"
                                TextColor="{Binding TextColor}" />
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label
                FontSize="16"
                HorizontalOptions="End"
                Text="Otka&#382;i"
                TextColor="Black">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnCancelTapped" />
                </Label.GestureRecognizers>
            </Label>
        </VerticalStackLayout>
    </Border>
</popups:Popup>
